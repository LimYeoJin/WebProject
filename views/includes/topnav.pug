.header.clearfix
  nav.navbar.navbar-expand-md.navbar-dark.bg-dark.fixed-top
    .container
      a.navbar-brand(href="/") EVENTBRITE
      button.navbar-toggler(type="button", data-toggle="collapse", data-target="#navbarsExampleDefault", aria-controls="navbarsExampleDefault", aria-expanded="false", aria-label="Toggle navigation")
        span.navbar-toggler-icon

      #navbarsExampleDefault.collapse.navbar-collapse
        ul.navbar-nav.ml-auto
          li.nav-item
            a.nav-link(href="/browse_events") BROWSE EVENTS
          li.nav-item-dropdown
            a.nav-link-dropdown-toggle(data-toggle="dropdown" href="/help" role="button" aria-haspopup="true" aria-expanded="false") HELP
              div.dropdown-menu
                a.dropdown-item(href="#one") Where are my tickets?
                a.dropdown-item(href="#two") How to contact the event organizer
                div.dropdown-divider(role="separator")
                a.dropdown-item(href="#three") Help Center
          li.nav-item
            a.nav-link(href="/users") Users
          if (!currentUser) 
            li.nav-item
              a.nav-link(href='/signin') Signin
            li.nav-item
              a.nav-link(href='/users/new') Signup
          else
            li.nav-item
              a.nav-link(href=`/users/${currentUser._id}`) My Profile
            li.nav-item
              a.nav-link(href='/signout') Signout
          li.nav-item
            a.nav-link(href="/events") CREAT EVENTS
          
